    "package",
    "packager",
    "build",
    "builder"
  ],
  "readmeFilename": "README.md",
  "dependencies": {
    "chalk": "^0.5.1",
    "dateformat": "^2.0.0",
    "fs-extra": "^1.0.0",
    "globby": "^6.1.0",
    "lodash": "^4.17.4",
    "shortid": "^2.1.3"
  },
  "devDependencies": {
    "istanbul": "^0.4.5",
    "jshint": "^2.9.7",
    "jshint-stylish": "^1.0.0",
    "mocha": "^10.1.0",
    "pre-commit": "0.0.11"
  }
